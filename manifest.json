{
  "manifest_version": 3,
  "name": "doggone",
  "version": "1.0.0",
  "action": {
    "default_icon": {              
      "16": "images/doge.png",   
      "24": "images/doge.png",   
      "32": "images/doge.png"    
    },
    "default_title": "doggone",   
    "default_popup": "popup.html"  
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "description": "When you just want to say 'doggone it!'",
  "icons":  {
    "16": "images/doge.png",   
    "24": "images/doge.png",
    "32": "images/doge.png",   
    "48": "images/doge.png", 
    "128": "images/doge.png"    
  },
  "background": {
    "service_worker": "background.js"
  }
}